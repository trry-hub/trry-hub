{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": "/",
    "rootDir": "/",
    "types": ["vite/client"],
    "paths": {
      "@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*",
    ".vitepress/**/*",
    "components/**/*"
  ],
  "exclude": ["node_modules"]
}
